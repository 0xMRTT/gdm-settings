#!/usr/bin/env python3
import os
import sys
import gettext
import logging

APPDIR = os.environ.get('APPDIR', '')             # required for AppImage

py_modules_dir = APPDIR + '@py_modules_dir@'
sys.path.insert(1, py_modules_dir)

localedir = APPDIR + '@locale_dir@'
gettext.install('@project_name@', localedir)

from @py_module_name@ import colors
logging.basicConfig(format=f'{colors.bold}%(levelname)s:{colors.reset} %(message)s')

from @py_module_name@ import gui
app = gui.GDM_Settings()
exit(app.run(sys.argv))
