from sys import argv
from os  import path

project_name = '@project_name@'
application_name = _('Login Manager Settings')
description = _('A settings app for GNOME\'s Login Manager (GDM)')
version = '@version@'
application_id = '@application_id@'

prefix = '@prefix@'
bindir = '@bindir@'
datadir = '@datadir@'
py_modules_dir = '@py_modules_dir@'
py_module_name = '@py_module_name@'

destdir = path.dirname(argv[0]).split(bindir)[0].replace(prefix,'')
ui_dir = path.join(destdir, datadir.strip('/'), project_name.strip('/'))
