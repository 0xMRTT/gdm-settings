<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <menu id="app_menu">
    <section>
      <item>
        <attribute name="label" translatable="true">Reload settings</attribute>
        <attribute name="action">app.reload_settings</attribute>
      </item>
      <item>
        <attribute name="label" translatable="true">Import user settings</attribute>
        <attribute name="action">app.import_user_settings</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="true">About</attribute>
        <attribute name="action">app.about</attribute>
      </item>
      <item>
        <attribute name="label" translatable="true">Quit</attribute>
        <attribute name="action">app.quit</attribute>
      </item>
    </section>
  </menu>
  <object class="AdwApplicationWindow" id="main_window">
    <property name="content">
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar">
            <property name="title-widget">
              <object class="AdwWindowTitle">
                <property name="title" bind-source="main_window" bind-property="title" bind-flags="sync-create"/>
              </object>
            </property>
            <child type="end">
              <object class="GtkMenuButton">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">app_menu</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkSeparator">
                <property name="margin-start">10</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton" id="apply_button">
                <property name="label">Apply</property>
                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwToastOverlay" id="main_toast_overlay">
            <child>
              <object class="GtkPaned" id="paned">
                <child type="start">
                  <object class="GtkStackSidebar">
                    <property name="stack">stack</property>
                  </object>
                </child>
                <child type="end">
                  <object class="GtkStack" id="stack">
                    <property name="hexpand">true</property>
                    <property name="width-request">300</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </object>
  <object class="GtkAboutDialog" id="about_dialog">
    <property name="transient-for">main_window</property>
    <property name="modal">true</property>
    <property name="program-name">Login Manager Settings (gdm-settings)</property>
    <property name="version">0.3-alpha</property>
    <property name="comments">A settings app for GNOME's Login Manager (GDM)</property>
    <property name="logo-icon-name">com.github.realmazharhussain.GdmSettings</property>
    <property name="website">https://github.com/realmazharhussain/gdm-settings</property>
    <property name="website-label">Homepage</property>
    <property name="license-type">agpl-3-0</property>
    <property name="copyright">Copyright Â© 2021 Mazhar Hussain</property>
  </object>
  <object class="GtkFileChooserDialog" id="image_chooser">
    <property name="transient-for">main_window</property>
    <property name="filter">
      <object class="GtkFileFilter">
        <property name="name">Images</property>
        <mime-types>
          <mime-type>image/*</mime-type>
        </mime-types>
      </object>
    </property>
    <child type="action">
      <object class="GtkButton" id="button_cancel">
        <property name="label">Cancel</property>
      </object>
    </child>
    <child type="action">
      <object class="GtkButton" id="button_select">
        <property name="label">Select</property>
      </object>
    </child>
  </object>
  <object class="AdwToast" id="apply_failed_toast">
    <property name="title" translatable="true">Failed to apply settings</property>
    <property name="timeout">2.5</property>
    <property name="priority">high</property>
  </object>
  <object class="AdwToast" id="apply_succeeded_toast">
    <property name="title" translatable="true">Settings applied</property>
    <property name="timeout">2.5</property>
    <property name="priority">high</property>
  </object>
</interface>