<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="@application_id@" path="@schema_path@">
	 <key name="last-visited-page" type="s">
	   <default>"theme"</default>
	   <choices>
	     <choice value="theme"/>
	     <choice value="settings"/>
	   </choices>
	 </key>
	 <key name="theme" type="s">
	   <default>"default"</default>
	   <summary>Theme Name</summary>
	 </key>
	 <key name="background-type" type="s">
	   <default>"None"</default>
	   <summary>Type of Background</summary>
	   <description>
	     Wether GDM background should be an Image, Color or None.
	   </description>
	   <choices>
	     <choice value="None"/>
	     <choice value="Image"/>
	     <choice value="Color"/>
	   </choices>
	 </key>
	 <key name="background-image" type="s">
	   <default>""</default>
	   <summary>Background Image</summary>
	   <description>
	     The image file to use as GDM background
	   </description>
	 </key>
	 <key name="background-color" type="s">
	   <default>"rgb(40,40,40)"</default>
	   <summary>Background Color</summary>
	   <description>
	     The Color to use as GDM background
	   </description>
	 </key>
	 <key name="enabled-tweaks" type="s">
	   <default>"[]"</default>
	   <summary>Enabled Tweaks</summary>
	 </key>
	 <key name="custom-css" type="s">
	   <default>""</default>
	   <summary>Custom CSS</summary>
	 </key>
  </schema>

  <schema id="@application_id@.theme-tweaks" path="@schema_path@theme-tweaks/">
    <key name="disable-top-bar-arrows" type="b">
      <default>false</default>
      <summary>Whether to disable top bar arrows</summary>
    </key>
    <key name="disable-top-bar-corners" type="b">
      <default>false</default>
      <summary>Whether to disable top bar corners</summary>
    </key>
    <key name="change-top-bar-text-color" type="b">
      <default>false</default>
      <summary>Whether to change top bar text color</summary>
    </key>
    <key name="top-bar-text-color" type="s">
	   <default>"rgb(250,250,250)"</default>
      <summary>Top bar text color</summary>
    </key>
    <key name="change-top-bar-background-color" type="b">
      <default>false</default>
      <summary>Whether to change top bar background</summary>
    </key>
    <key name="top-bar-background-color" type="s">
	   <default>"rgb(0,0,0)"</default>
      <summary>Top bar background color</summary>
    </key>
  </schema>

  <schema id="@application_id@.settings" path="@schema_path@settings/">
  </schema>

</schemalist>
