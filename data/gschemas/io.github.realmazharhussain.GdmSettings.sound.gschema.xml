<schemalist gettext-domain="gdm-settings">
  <schema id="io.github.realmazharhussain.GdmSettings.sound"
       path="/io/github/realmazharhussain/GdmSettings/sound/">

    <key name="theme" type="s">
      <default>"freedesktop"</default>
    </key>

    <key name="over-amplification" type="b">
      <default>false</default>
    </key>

    <key name="event-sounds" type="b">
      <default>true</default>
    </key>

    <key name="feedback-sounds" type="b">
      <default>false</default>
    </key>

  </schema>
</schemalist>
