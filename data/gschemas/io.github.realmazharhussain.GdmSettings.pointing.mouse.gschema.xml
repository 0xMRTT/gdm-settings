<schemalist gettext-domain="gdm-settings">
  <schema id="io.github.realmazharhussain.GdmSettings.pointing.mouse"
       path="/io/github/realmazharhussain/GdmSettings/pointing/mouse/">

    <key name="pointer-acceleration" type="s">
      <default>"default"</default>
      <choices>
        <choice value="default"/>
        <choice value="flat"/>
        <choice value="adaptive"/>
      </choices>
    </key>

    <key name="inverse-scrolling" type="b">
      <default>false</default>
    </key>

    <key name="mouse-speed" type="d">
      <default>0.35</default>
      <summary>Pointer speed</summary>
      <description>Pointer speed for the touchpad. Accepted values are in the [-1..1] range (from “unaccelerated” to “fast”). A value of 0 is the system default.</description>
      <range min="-1" max="1"/>
    </key>

  </schema>
</schemalist>
